<script type="text/javascript">

    $(document).ready(function () {
        $('#relatorio').DataTable({
            "language": {
                "url": "js/datatable/pt-br.json"
            },
            "pageLength": 10, 
            "ordering": false,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
        });
    });
    
    function showAdd(){
        $('#modalAdd').modal('show');
    }
    
    function add(){
        
        var data = {};
        $.each($("#formAdd .obg").serializeArray(), function (_, field) {
            data[field.name] = field.value;
        });
        
        if(!validaParametros(data)){
            Swal.fire({
                title: 'Atenção!',
                html: "Digite todos os campos.",
                type: 'info'
            });
            return false;
        }
        
        if(!validarData(data.add_publicacao)){
            Swal.fire({
                title: 'Atenção!',
                html: "A data de pesquisa não é válida.",
                type: 'info'
            });
            return false;
        }
        
        var options = {
            url: '/producao-grupo/add',
            type: 'POST',
            dataType: 'json',
            cache: false,
            success: function (retorno) {
                if (retorno.response) {
                    Swal.fire({
                        title: 'Sucesso!',
                        html: retorno.msg,
                        type: 'success',
                        onClose: () => {
                            window.location.reload();
                        }
                    });
                        
                }else{
                    Swal.fire({
                        title: 'Atenção!',
                        html: retorno.msg,
                        type: 'warning'
                    });
                }
            }
        };

        $('#formAdd').ajaxSubmit(options);
        return false;
    }
    
    function showEdit(cod){
        $.ajax({
            url: '/producao-grupo/showEdit',
            data: {cod : cod},
            type: 'json',
            method: 'POST',
            beforeSend: function () {
                loader();
            },
            success: function (retorno) {
                retorno = JSON.parse(retorno);
                Swal.close();
                if(retorno.response){
                    $('#edit_cod').val(retorno.result['cod']);
                    $('#edit_base').val(retorno.result['base']),
                    $('#edit_datapesq').val(retorno.result['dt_pesq']),
                    $('#edit_periodico').val(retorno.result['titulo_periodico']),
                    $('#edit_ano').val(retorno.result['ano']),
                    $('#edit_mes').val(retorno.result['mes']),
                    $('#edit_volume').val(retorno.result['volume']),
                    $('#edit_numero').val(retorno.result['numero']),
                    $('#edit_artigo').val(retorno.result['titulo_artigo']),
                    $('#edit_autor').val(retorno.result['autor']),
                    $('#edit_pginicial').val(retorno.result['pagina_inicial']),
                    $('#edit_pgfim').val(retorno.result['pagina_final']),
                    $('#edit_palavra_chave').val(retorno.result['palavra_chave']),
                    $('#edit_endereco').val(retorno.result['endereco_acesso']),
                    $('#modalEdit').modal('show');
                }else{
                    Swal.fire({
                        title: 'Atenção!',
                        html: 'Material não encontrado.',
                        type: 'info'
                    });
                }
            }
        });
    }
    
    function edit(){
        
        var data = {
            cod                 : $('#edit_cod').val(),
            base                : $('#edit_base').val(),
            data_pesq           : $('#edit_datapesq').val(),
            titulo_periodico    : $('#edit_periodico').val(),
            ano                 : $('#edit_ano').val(),
            mes                 : $('#edit_mes').val(),
            volume              : $('#edit_volume').val(),
            numero              : $('#edit_numero').val(),
            titulo_artigo       : $('#edit_artigo').val(),
            autor               : $('#edit_autor').val(),
            pginicial           : $('#edit_pginicial').val(),
            pgfim               : $('#edit_pgfim').val(),
            palavra_chave       : $('#edit_palavra_chave').val(),
            endereco_acesso     : $('#edit_endereco').val(),
            interesse           : '5'
        };
        console.log(data);
        
        if(!validaParametros(data)){
            Swal.fire({
                title: 'Atenção!',
                html: "Digite todos os campos.",
                type: 'info'
            });
            return false;
        }
        
        if(!validarData(data.data_pesq)){
            Swal.fire({
                title: 'Atenção!',
                html: "A data de pesquisa não é válida.",
                type: 'info'
            });
            return false;
        }
        
        $.ajax({
            url: '/quadro-leitura/edit',
            data: data,
            type: 'json',
            method: 'POST',
            beforeSend: function () {
                loader();
            },
            success: function (retorno) {
                retorno = JSON.parse(retorno);
                Swal.fire({
                    title: 'Sucesso!',
                    html: retorno.msg,
                    type: 'success',
                    onClose: () => {
                        window.location.reload();
                    }
                });
            }
        });
    }
    
    function showDelete(cod){
        Swal.fire({
            title: 'Atenção!',
            html: 'Deseja realmente excluir?',
            type: 'info',
            showCancelButton: true,
            preConfirm: () => {
                $.ajax({
                    url: '/producao-grupo/delete',
                    data: {cod : cod},
                    type: 'json',
                    method: 'POST',
                    beforeSend: function () {
                        loader();
                    },
                    success: function (retorno) {
                        retorno = JSON.parse(retorno);
                        Swal.fire({
                            title: 'Sucesso!',
                            html: retorno.msg,
                            type: 'success',
                            onClose: () => {
                                window.location.reload();
                            }
                        });
                    }
                });
            }
        });
    }
    
    function showFile(arquivo){
        window.open('/arquivos/producao-grupo/'+arquivo,'_blank');
    }

</script>