<div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title color-primary2"><i class="fa fa-plus"></i>&nbsp;Adicionar nova Ata</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form" action="/atas/add" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="add_conteudo" class="col-form-label">Conteúdo Sintético:</label>
                        <input type="text" required class="form-control" id="add_conteudo" name="add_conteudo" title="Digite o Conteúdo Sintético."/>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-6">
                            <label for="add_dt" class="col-form-label">Data da Reunião:</label>
                            <input id="add_dt" required class="form-control input-group-lg" type="date" name="add_dt" title="Digite a data da reunião."/>
                        </div>

                        <div class="form-group col-xs-6">
                            <label for="add_h" class="col-form-label">Horário da Reunião:</label>
                            <input id="add_h" required class="form-control input-group-lg" type="text" name="add_h"  placeholder="00:00" data-mask="00:00" title="Digite o horário da reunião."/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add_arquivo" class="col-form-label">Arquivo:</label>
                        <input type="file" required class="form-control" name="add_arquivo" id="add_arquivo">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary-borded2" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary3">Finalizar <i class="fa fa-check"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

